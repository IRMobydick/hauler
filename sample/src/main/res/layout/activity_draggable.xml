<?xml version="1.0" encoding="utf-8"?>
<com.thefuntasty.hauler.ElasticDragDismissFrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".draggable.DraggableActivity"
        android:id="@+id/elasticDragDismissFrameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        app:dragDismissDistance="112dp"
        app:dragDismissScale="0.95">


    <com.thefuntasty.hauler.LockableNestedScrollView
            android:id="@+id/lockable_scroll_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

        <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/swipe_to_dismiss"/>

        </FrameLayout>

    </com.thefuntasty.hauler.LockableNestedScrollView>

</com.thefuntasty.hauler.ElasticDragDismissFrameLayout>

